<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
             https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="hcen-periferico-pu" transaction-type="JTA">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <jta-data-source>ExampleDS</jta-data-source>

        <!-- Entidades del core-domain -->
        <class>com.hcen.core.domain.administrador_clinica</class>
        <class>com.hcen.core.domain.administrador_hcen</class>
        <class>com.hcen.core.domain.clinica</class>
        <class>com.hcen.core.domain.configuracion_clinica</class>
        <class>com.hcen.core.domain.documento_clinico</class>
        <class>com.hcen.core.domain.historia_clinica</class>
        
        <class>com.hcen.core.domain.politica_acceso</class>
        <class>com.hcen.core.domain.profesional_salud</class>
        <class>com.hcen.core.domain.usuario_salud</class>

        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.jdbc.batch_size" value="20"/>
            <property name="hibernate.cache.use_second_level_cache" value="false"/>
            <property name="hibernate.jdbc.time_zone" value="UTC"/>
        </properties>
    </persistence-unit>
</persistence>
