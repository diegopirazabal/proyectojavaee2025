<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Indicador de notificación no leída -->
        <View
            android:id="@+id/view_indicador_no_leida"
            android:layout_width="8dp"
            android:layout_height="0dp"
            android:background="#2196F3"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Contenido de la notificación -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/view_indicador_no_leida"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Título -->
            <TextView
                android:id="@+id/text_notificacion_titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Título de la notificación"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Mensaje -->
            <TextView
                android:id="@+id/text_notificacion_mensaje"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Mensaje de la notificación"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp"
                android:maxLines="3"
                android:ellipsize="end" />

            <!-- Remitente -->
            <TextView
                android:id="@+id/text_notificacion_remitente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Remitente"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp"
                android:textStyle="italic" />

            <!-- Fecha -->
            <TextView
                android:id="@+id/text_notificacion_fecha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="01/01/2025 10:00"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
